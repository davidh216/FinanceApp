rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User's accounts subcollection
      match /accounts/{accountId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's transactions subcollection
      match /transactions/{transactionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's budgets subcollection
      match /budgets/{budgetId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's categories subcollection
      match /categories/{categoryId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Global categories (read-only for all authenticated users)
    match /globalCategories/{categoryId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can modify global categories
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 